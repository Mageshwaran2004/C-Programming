#include<stdio.h>
int main()
{
  float bs,da,hra,gs;
  printf("\nEnter the amount of basic salary: ");
  scanf("%f",&bs);
  da=bs*0.4;
  hra=bs*0.2;
  gs=bs+da+hra;
   printf("\nBasic Salary : %0.2f",bs);
  printf("\nDear Allowance : %0.2f",da);
  printf("\nHouse Allowance : %0.2f",hra);
  printf("\nGross Salary : %0.2f",gs);
  return 0;
}
