#include <stdio.h>
int main()
{
    float l,b,r,area_rect,perimeter_rect,area_cir,perimeter_cir;
    printf("\nEnter the length of the rectangle:");
    scanf("%f",&l);
    printf("\nEnter the Breath of the rectangle:");
    scanf("%f",&b);
    area_rect=l*b;
    printf("\nArea of Rectangle:%f",area_rect);
    perimeter_rect=(2*(l+b));
    printf("\nPerimeter of Rectangle:%f",perimeter_rect);
    printf("\nEnter the radius of circle:");
    scanf("%f",&r);
    area_cir=(3.14*r*r);
    perimeter_cir=(2*3.14*r);
    printf("\nArea of Circle:%f",area_cir);
    printf("\nPerimeter of Circle:%f",perimeter_cir);
    return 0;
}
